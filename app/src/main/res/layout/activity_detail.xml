<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_margin="25dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="300dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/iv_image_detail"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/cat"/>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_nama_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tv_email_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example@email.com"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tv_id_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID: "
            android:textAlignment="center"
            android:layout_marginBottom="100dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_update_staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Data Staff"
        android:backgroundTint="#528DD6"/>

    <Button
        android:id="@+id/btn_delete_staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Data Staff"
        android:backgroundTint="#F44D4D"/>

</LinearLayout>